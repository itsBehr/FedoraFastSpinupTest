#!/bin/bash
#Initilization file:

echo "Let's get started! What type of CPU do you use?"
prompt1="(a)md or (i)ntel | "
read -p "$prompt1" -s cpuType

echo "Do you have an Nvidia GPU?"
prompt2="(y)es or (n)o | "
read -p "$prompt2" -s gpuType

echo "Do you want the optional Linux VR Jumpstart packages?"
prompt3="(y)es or (n)o | "
read -p "$prompt3" -s vrOpt

if [ $cpuType = a -a $gpuType = y -a $vrOpt = y ]
then
curl -L https://github.com/itsBehr/FedoraFastSpinupTest/raw/refs/heads/itsBehr-maincandidate/Step_1AMD-NV-VR > ~/Desktop/fedoraquikstart.sh
elif [ $cpuType = a -a $gpuType = y -a $vrOpt = n ]
then
curl -L https://github.com/itsBehr/FedoraFastSpinupTest/raw/refs/heads/itsBehr-maincandidate/Step_1AMD-NV > ~/Desktop/fedoraquikstart.sh
elif [ $cpuType = a -a $gpuType = n -a $vrOpt = n ]
then
curl -L https://github.com/itsBehr/FedoraFastSpinupTest/raw/refs/heads/itsBehr-maincandidate/Step_1AMD > ~/Desktop/fedoraquikstart.sh
elif [ $cpuType = a -a $gpuType = n -a $vrOpt = y ]
then
curl -L https://github.com/itsBehr/FedoraFastSpinupTest/raw/refs/heads/itsBehr-maincandidate/Step_1AMD-VR > ~/Desktop/fedoraquikstart.sh
elif [ $cpuType = i -a $gpuType = y -a $vrOpt = y ]
then
curl -L https://github.com/itsBehr/FedoraFastSpinupTest/raw/refs/heads/itsBehr-maincandidate/Step_1I-NV-VR > ~/Desktop/fedoraquikstart.sh
elif [ $cpuType = i -a $gpuType = y -a $vrOpt = n ]
then
curl -L https://github.com/itsBehr/FedoraFastSpinupTest/raw/refs/heads/itsBehr-maincandidate/Step_1I-NV > ~/Desktop/fedoraquikstart.sh
elif [ $cpuType = i -a $gpuType = n -a $vrOpt = n ]
then
curl -L https://github.com/itsBehr/FedoraFastSpinupTest/raw/refs/heads/itsBehr-maincandidate/Step_1I > ~/Desktop/fedoraquikstart.sh
elif [ $cpuType = i -a $gpuType = n -a $vrOpt = y ]
then
curl -L https://github.com/itsBehr/FedoraFastSpinupTest/raw/refs/heads/itsBehr-maincandidate/Step_1I-VR > ~/Desktop/fedoraquikstart.sh
fi

bash ~/Desktop/fedoraquikstart.sh
